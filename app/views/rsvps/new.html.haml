.centre
  %section
    = form_for :rsvp, url: rsvps_path do |f|
      .content

        .column-one-whole
          %h1 RSVP
          %p Send one RSVP for each person attending.
          %br

          - if @rsvp.errors.any?
            #error_explanation
              %h2
                Please check your answers
              %ul
                - @rsvp.errors.full_messages.each do |msg|
                  %li= msg

        .column-one-half
          = f.label :name, "Full name"
          = f.text_field :name

          %br
          = f.label :attending, "Can this person attend?"
          .radios
            = f.radio_button :attending, "1", :onclick => "$('#hidden').show();"
            = f.label :attending, 'Yes', :value => '1'
            %br
            = f.radio_button :attending, "0", :onclick => "$('#hidden').hide();"
            = f.label :attending, 'No', :value => '0'
          %br

          #hidden
            = f.label :additional_info, "Are there any dietary requirements or other information we should know about?"
            = f.text_area :additional_info
            %br
            = f.label :contact, "What is your email?"
            %p We will contact you when we have more information, for example; meal choices.
            = f.email_field :contact
            %br
          %p
            = f.submit "Send this RSVP"

          %nav.no-padding.no-margin
            %ul
              %li=link_to "Cancel", root_path
